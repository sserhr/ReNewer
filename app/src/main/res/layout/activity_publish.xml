<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framelayout_over">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mainly_background" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Publish"
                android:textColor="#ffffff"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/publish_cancel_selector"
                android:id="@+id/img_publish_cancle"
                android:layout_alignParentLeft="true"
                android:paddingLeft="5dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/publish_commit_selector"
                android:id="@+id/img_publish_commit"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                />
        </RelativeLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/publish_edit_title"
            android:gravity="left|top"
            android:hint="Your goods title..."
            android:background="@null" >
        </EditText>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/publish_edit_description"
            android:gravity="left|top"
            android:hint="Add some comments for your goods..."
            android:background="@null" >
        </EditText>

        <GridView
            android:id="@+id/noScrollgridview"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp" >
        </GridView>
        <!--<EditText-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="8dp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:id="@+id/publish_edit_category"-->
            <!--android:gravity="left|top"-->
            <!--android:hint="Your goods category..."-->
            <!--android:background="@null" >-->
        <!--</EditText>-->
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/publish_edit_price"
            android:gravity="left|top"
            android:hint="Price..."
            android:background="@null" >
        </EditText>


    </LinearLayout>
</FrameLayout>
